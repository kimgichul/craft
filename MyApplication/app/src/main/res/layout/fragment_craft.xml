<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_assemble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조립하기"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- 상단 육각형 이미지 버튼들 -->
    <LinearLayout
        android:id="@+id/hexagon_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/text_assemble">

        <!-- 첫 번째 행: 3개 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onClickButton"
                android:text="CPU"
                android:background="@drawable/hexagon_shape"
                android:layout_margin="8dp" />

            <!-- ImageView for Button1 Image -->
            <ImageView
                android:id="@+id/button1Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onClickButton"
                android:text="메인보드"
                android:background="@drawable/hexagon_shape"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onClickButton"
                android:text="그래픽카드"
                android:background="@drawable/hexagon_shape"
                android:layout_margin="8dp" />
        </LinearLayout>

        <!-- 두 번째 행: 2개 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onClickButton"
                android:text="SSD"
                android:background="@drawable/hexagon_shape"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onClickButton"
                android:text="RAM"
                android:background="@drawable/hexagon_shape"
                android:layout_margin="8dp" />
        </LinearLayout>

        <!-- 세 번째 행: 3개 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onClickButton"
                android:text="파워"
                android:background="@drawable/hexagon_shape"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onClickButton"
                android:text="케이스"
                android:background="@drawable/hexagon_shape"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onClickButton"
                android:text="쿨러"
                android:background="@drawable/hexagon_shape"
                android:layout_margin="8dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>